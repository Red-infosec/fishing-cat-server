<ol class="breadcrumb">
  <li><%= link_to icon_campaigns(text:t('.title')), admin_campaigns_path %></li>
  <li class="active"><%= @campaign.cid %></li>
</ol>
<%= component_notice %>
<p>
  <%= link_to icon_action_edit(text:t('.edit_campaign')), edit_admin_campaign_path(@campaign), class:'btn btn-primary' %>
  <%= link_to icon_action_destroy(text:t('.destroy')), admin_campaign_path(@campaign),  class:'btn btn-danger pull-right', method: :delete, data: { confirm: 'Are you sure?' } %>
</p>

<hr>
<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label"><%= t('.cid') %></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @campaign.cid %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%= t('.form_template') %></label>
    <div class="col-sm-10">
      <pre class="form-control-static"><code><%= @campaign.form_template %></code></pre>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%= t('.result_template') %></label>
    <div class="col-sm-10">
      <pre class="form-control-static"><%= @campaign.result_template %></pre>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%= t('.updated_at') %></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @campaign.updated_at %></p>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label"><%= t('.created_at') %></label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @campaign.created_at %></p>
    </div>
  </div>
</div>
